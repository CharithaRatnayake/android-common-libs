<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Progressbar Styles -->
    <style name="cl_progress_bar" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/cl_custom_alert_dialog_style</item>
        <item name="android:windowBackground">@color/cl_transparent</item>
        <item name="android:textColorPrimary">@color/cl_white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/cl_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cl_custom_alert_dialog_style">
        <item name="android:bottomBright">@color/cl_transparent</item>
        <item name="android:bottomDark">@color/cl_transparent</item>
        <item name="android:bottomMedium">@color/cl_transparent</item>
        <item name="android:centerBright">@color/cl_transparent</item>
        <item name="android:centerDark">@color/cl_transparent</item>
        <item name="android:centerMedium">@color/cl_transparent</item>
        <item name="android:fullBright">@color/cl_transparent</item>
        <item name="android:fullDark">@color/cl_transparent</item>
        <item name="android:topBright">@color/cl_transparent</item>
        <item name="android:topDark">@color/cl_transparent</item>
    </style>

</resources>